<%- include('../partials/header') %>

<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Services</h1>
    <a href="/services/new" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition">
      Add New Service
    </a>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="services-grid">
    <a href="/services/new" class="bg-white rounded-lg shadow-md p-6 flex flex-col items-center justify-center min-h-[250px] hover:bg-gray-50 transition group">
      <div class="w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center mb-3 group-hover:bg-blue-200 transition">
        <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
      </div>
      <span class="text-lg font-semibold text-gray-700 group-hover:text-gray-900">New Service</span>
    </a>
    <% services.forEach(service => { %>
      <div class="bg-white rounded-lg shadow-md p-6" id="service-<%= service.id %>">
        <div class="flex justify-between items-start mb-4">
          <h2 class="text-xl font-semibold text-gray-900"><%= service.name %></h2>
          <span class="bg-green-100 text-green-800 text-sm px-2 py-1 rounded">
            $<%= service.price.toFixed(2) %>
          </span>
        </div>
        <p class="text-gray-600 mb-4"><%= service.description || 'No description available' %></p>
        <div class="flex items-center text-sm text-gray-500 mb-4">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span><%= service.user.firstName %> <%= service.user.lastName %></span>
        </div>
        <div class="flex justify-between items-center">
          <a href="/services/<%= service.id %>" class="text-blue-500 hover:text-blue-600">
            View Details
          </a>
          <% if (user && service.userId === user.id) { %>
            <div class="flex space-x-2">
              <a href="/services/<%= service.id %>/edit" class="text-yellow-500 hover:text-yellow-600">
                Edit
              </a>
              <form action="/services/<%= service.id %>?_method=DELETE" method="POST" class="inline">
                <button type="submit" class="text-red-500 hover:text-red-600" onclick="return confirm('Are you sure you want to delete this service?')">
                  Delete
                </button>
              </form>
            </div>
          <% } else { %>
            <a href="/transactions/new/<%= service.id %>" class="bg-green-500 text-white px-3 py-1 rounded hover:bg-green-600 transition">
              Book Now
            </a>
          <% } %>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<script>
  const socket = io();
  const servicesGrid = document.getElementById('services-grid');

  // Helper function to create service card HTML
  function createServiceCard(service) {
    return `
      <div class="bg-white rounded-lg shadow-md p-6" id="service-${service.id}">
        <div class="flex justify-between items-start mb-4">
          <h2 class="text-xl font-semibold text-gray-900">${service.name}</h2>
          <span class="bg-green-100 text-green-800 text-sm px-2 py-1 rounded">
            $${parseFloat(service.price).toFixed(2)}
          </span>
        </div>
        <p class="text-gray-600 mb-4">${service.description || 'No description available'}</p>
        <div class="flex items-center text-sm text-gray-500 mb-4">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span>${service.user.firstName} ${service.user.lastName}</span>
        </div>
        <div class="flex justify-between items-center">
          <a href="/services/${service.id}" class="text-blue-500 hover:text-blue-600">
            View Details
          </a>
          ${service.userId === '<%= user?.id %>' ? `
            <div class="flex space-x-2">
              <a href="/services/${service.id}/edit" class="text-yellow-500 hover:text-yellow-600">
                Edit
              </a>
              <form action="/services/${service.id}?_method=DELETE" method="POST" class="inline">
                <button type="submit" class="text-red-500 hover:text-red-600" onclick="return confirm('Are you sure you want to delete this service?')">
                  Delete
                </button>
              </form>
            </div>
          ` : `
            <a href="/transactions/new/${service.id}" class="bg-green-500 text-white px-3 py-1 rounded hover:bg-green-600 transition">
              Book Now
            </a>
          `}
        </div>
      </div>
    `;
  }

  // Listen for service updates
  socket.on('serviceUpdate', (data) => {
    const { type, service, serviceId } = data;

    switch (type) {
      case 'created':
        servicesGrid.insertAdjacentHTML('afterbegin', createServiceCard(service));
        break;
      case 'updated':
        const updatedCard = document.getElementById(`service-${service.id}`);
        if (updatedCard) {
          updatedCard.outerHTML = createServiceCard(service);
        }
        break;
      case 'deleted':
        const deletedCard = document.getElementById(`service-${serviceId}`);
        if (deletedCard) {
          deletedCard.remove();
        }
        break;
    }
  });
</script>

<%- include('../partials/footer') %> 
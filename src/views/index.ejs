<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DirectBill</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="/socket.io/socket.io.js"></script>
</head>
<body class="bg-gray-100">
    <nav class="bg-white shadow-lg">
        <div class="max-w-6xl mx-auto px-4">
            <div class="flex justify-between">
                <div class="flex space-x-7">
                    <div>
                        <a href="/" class="flex items-center py-4">
                            <span class="font-semibold text-gray-500 text-lg">DirectBill</span>
                        </a>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <% if (user) { %>
                        <a href="/services" class="py-2 px-4 text-gray-500 hover:text-gray-700">Services</a>
                        <a href="/transactions" class="py-2 px-4 text-gray-500 hover:text-gray-700">Transactions</a>
                        <div class="flex items-center space-x-2">
                            <span class="text-gray-700"><%= user.email %></span>
                            <a href="/auth/logout" class="py-2 px-4 bg-red-500 text-white rounded hover:bg-red-600">Logout</a>
                        </div>
                    <% } else { %>
                        <a href="/auth/google" class="py-2 px-4 bg-blue-500 text-white rounded hover:bg-blue-600">
                            Login with Google
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <div class="max-w-6xl mx-auto mt-8 px-4">
        <% if (messages.success) { %>
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                <%= messages.success %>
            </div>
        <% } %>
        
        <% if (messages.error) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                <%= messages.error %>
            </div>
        <% } %>

        <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <h1 class="text-2xl font-bold mb-4">Welcome to DirectBill</h1>
            <% if (user) { %>
                <p class="mb-4">You are logged in as <%= user.email %></p>
                <div id="real-time-updates" class="mt-4">
                    <!-- Real-time updates will be inserted here -->
                </div>
            <% } else { %>
                <p class="mb-4">Please login to access all features.</p>
            <% } %>
        </div>
    </div>

    <script>
        // Socket.IO client-side setup
        const socket = io();
        
        socket.on('connect', () => {
            console.log('Connected to server');
        });

        // Example of real-time updates
        socket.on('update', (data) => {
            const updatesDiv = document.getElementById('real-time-updates');
            const updateElement = document.createElement('div');
            updateElement.className = 'bg-blue-100 p-2 mb-2 rounded';
            updateElement.textContent = data.message;
            updatesDiv.prepend(updateElement);
        });
    </script>
</body>
</html> 